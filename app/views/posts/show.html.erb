<p class= "date"> <%= @post.created_at.strftime("%A, %B %d") %>
<h1>
	<%= @post.title %>
</h1>

<div class="content">
	<%= markdown @post.content %>
</div>

<br>

<%= link_to "edit", edit_post_path(@post) %>
<%= link_to "back", posts_path %>
<%= link_to "delete", post_path(@post), method: :delete, data: { confirm: "are you sure you will delete this post" } %> 

