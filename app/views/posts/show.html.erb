<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2  col-md-6 col-md-offset-3 ">

	<%= link_to "create new", new_post_path %>
	<p class= "date"> <%= @post.created_at.strftime("%A, %B %d") %>
	</p>

<%= image_tag "/posts/#{@post.id}/featured/#{@post.image_filename}", :class => "col-xs-12" if @post.image_filename? %>

<h1>
	<%= @post.title %>
</h1>

<div class="content">
	<%= markdown @post.content %>
</div>

<br>


<% if @post.previous.presence %>	
<div class="previous ">
<%= link_to "Previous Post", @post.previous %> 	
</div>
<% end %>


<% if @post.next.presence %>	
<div class="next">
	<%= link_to "Next Post", @post.next %> 	
</div>
<% end %>
<br>
<hr>
<% if user_signed_in? %>
	<div class="admin_links">
<%= link_to "Edit", edit_post_path(@post) %> | 
<%= link_to "Back", posts_path %> | 
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "are you sure ou will delete this post" } %> 		
	</div>

	<% end %>

	<%= render 'disqus' %>

</div>